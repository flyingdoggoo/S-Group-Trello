# Environment
NODE_ENV=production
PORT=8000
HOST=0.0.0.0

# Frontend URL (add your Vercel frontend URL here)
CORS_ORIGIN=http://localhost:5173

# Database (use Neon, PlanetScale, or Vercel Postgres)
DATABASE_URL=postgresql://user:password@host:port/database

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-backend.vercel.app/auth/google/callback

# User Settings
DEFAULT_USER_AVATAR_URL=https://example.com/avatar.png

# JWT Settings
EXPIRES_IN_ACCESS_TOKEN=15m
JWT_SECRET_ACCESS_TOKEN=your-access-token-secret-key
EXPIRES_IN_REFRESH_TOKEN=7d
JWT_SECRET_REFRESH_TOKEN=your-refresh-token-secret-key